<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.wiesloch.mapper.UserMapper">
	<!-- 插入新用户 -->
	<insert id="insertUser" parameterType="com.wiesloch.po.User">
		<selectKey keyProperty="user_id" order="AFTER" resultType="java.lang.Integer">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into
		wine_user(user_name,user_account,user_password,user_points,user_level,user_isDelete)
		values(#{user_name},#{user_account},#{user_password},#{user_points},#{user_level},#{user_isDelete})
	</insert>
	<!-- 根据帐号查询用户 -->
	<select id="selectUser" parameterType="java.lang.String"
		resultType="com.wiesloch.po.User">
		SELECT * FROM wine_user u WHERE u.user_account =
		#{user_account}
	</select>

</mapper>